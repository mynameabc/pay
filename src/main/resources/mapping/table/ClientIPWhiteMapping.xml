<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.ClientIPWhiteMapper">

    <resultMap id="BaseResultMap" type="com.entity.ClientIPWhite">
        <id column="ID" jdbcType="BIGINT" property="ID"/>
        <result column="ip" jdbcType="VARCHAR" property="ip" />
        <result column="port" jdbcType="VARCHAR" property="port" />
        <result column="merchantID" jdbcType="BIGINT" property="merchantID" />
        <result column="CreateTime" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
      ID, ip, port, merchantID, createTime
    </sql>

    <select id="getClientIPWhite" resultMap="BaseResultMap">
      select <include refid="Base_Column_List"/> from clientip_white_list cwl
      <where>
        <if test="clientIP != null and clientIP != ''">
            cwl.ip = #{clientIP}
        </if>
        <if test="merchantID != null">
          and cwl.merchantID = #{merchantID}
        </if>
      </where>
    </select>

</mapper>
